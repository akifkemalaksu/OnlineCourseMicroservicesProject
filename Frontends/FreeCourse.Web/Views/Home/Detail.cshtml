@{
    ViewData["Title"] = "Detail";
}

@model CourseViewModel

<div class="row">
    <div class="col-md-9">
        <div class="card">
            <img src="@Model.PhotoWithUrl" class="card-img-top" />

            <div class="card-body">
                <h5 class="card-header"> @Model.Name </h5>
                <div class="badge bg-primary"> Kategori: @Model.Category.Name </div>
                <p class="card-text"> @Model.Description </p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-header"> Fiyat: @Model.Price TL </h5>
                <a asp-controller="basket" asp-action="AddBasketItem" asp-route-courseId="@Model.Id" class="btn btn-primary w-100"> Sepete Ekle </a>
            </div>
        </div>
    </div>
</div>
