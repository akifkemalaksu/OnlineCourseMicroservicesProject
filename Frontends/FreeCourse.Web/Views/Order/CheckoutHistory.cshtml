@{
    ViewData["Title"] = "CheckoutHistory";
}
@model List<OrderViewModel>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"> Ödeme alma geçmişim </h5>

                @if (Model.Any())
                {
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th scope="col"> Sipariş(ödeme) No </th>
                                <th scope="col"> Satın alma tarihi </th>
                                <th scope="col"> Detaylar </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr>
                                    <td> @order.Id </td>
                                    <td> @order.CreatedDate.ToShortDateString() </td>
                                    <td>
                                        <table class="table table-striped">
                                            <thead>
                                                <tr>
                                                    <th scope="col"> Kurs ismi </th>
                                                    <th scope="col"> Kurs fiyat </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var orderItem in order.OrderItems)
                                                {
                                                    <tr>
                                                        <td> @orderItem.ProductName </td>
                                                        <td> @orderItem.Price TL </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info"> Satın aldığınız herhangi bir kurs bulunmamaktadır. </div>
                }
            </div>
        </div>
    </div>
</div>